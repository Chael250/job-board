{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "transformIgnorePatterns": [
    "node_modules/(?!(uuid)/)"
  ],
  "moduleNameMapping": {
    "^uuid$": "uuid"
  },
  "preset": "ts-jest",
  "testTimeout": 30000,
  "setupFilesAfterEnv": ["<rootDir>/test-setup.ts"]
}